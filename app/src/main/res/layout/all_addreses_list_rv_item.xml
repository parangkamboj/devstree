<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp4"
        android:background="@color/white">


        <TextView
            android:id="@+id/address_name1"
            style="@style/TextBlack16sp"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:singleLine="true"
            android:text=""
            app:layout_constraintEnd_toStartOf="@id/update_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address_name2"
            style="@style/TextBlack16sp"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp20"
            android:alpha="0.6"
            android:ellipsize="marquee"
            android:text=""
            android:textSize="@dimen/sp14"
            app:layout_constraintEnd_toStartOf="@id/update_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_name1" />

        <TextView
            android:id="@+id/distance"
            style="@style/TextBlack16sp"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dp20"
            android:ellipsize="marquee"
            android:text=""
            android:textSize="@dimen/sp14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_name2" />

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2dp"
            android:src="@drawable/delete_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/update_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2dp"
            android:src="@android:drawable/ic_menu_upload"
            app:layout_constraintEnd_toStartOf="@id/delete_icon"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>